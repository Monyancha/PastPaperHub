<html>
    <head>
        <!--- more info to be added here e.g favicon -->
        <title>PastPaperHub</title>
        <link rel="stylesheet" type="text/css" href="styles/header.css">
        <link rel="stylesheet" type="text/css" href="styles/fonts.css">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="theme-color" content="#000" />
        <meta name="description" content="Get past papers for free">
        <script src="Assets/Javascripts/lib/jquery-3.3.1.min.js"></script>
        <link rel="icon" 
        type="image/png" 
        href="Assets/Images/LOGO.jpg">
        <script src="Assets/Javascripts/particles.min.js"></script>
    </head>
    <body>
        <div class="navigation">
            <a href="/"><span id="logo">PastPaperHub</span></a>
            
            <span id="account">
                <div id="user-container">
                    <div hidden id="user-pic"></div>
                    <div hidden id="user-name"></div>
                </div>
            </span>
        </div>

        <div id="cover">
            <div id="text-cover">
                <h4>Setup your profile to improve your experience with PastPaper Hub</h4>
            </div>
        </div>
        <!--uSER PROFILE-->
        <div id="forms">
                <form id="profile-form" action="#">
                    <form>
                        <div>University : </div>
                        <select name = "dropdown" class="form-design" id="university" name="university">
                            <option value=""></option>
                            <option value="Makerere University">Makerere University</option>
                            <option value="Kyambogo University">Kyambogo University</option>
                            <option value="Nkozi University">Nkozi University</option>
                            <option value="Mbarara University">Mbarara University</option>
                        </select>
                    </form>

                    <form>
                        <div>Course :  </div>
                        <select name = "dropdown" class="form-design" id="course" name="course">
                            <option value=""></option>
                            <option value="Medicine">Medicine</option>
                            <option value="Computer Engineering">Computer Engineering</option>
                            <option value="Electrical Engineering">Electrical Engineering</option>
                            <option value="Marketing">Marketing</option>
                            <option value="Law">Law</option>
                        </select>
                    </form>

                    <form>
                        <span>Year : </span>
                        <select name = "dropdown" class="form-design" id="year" name="year">
                            <option value=""></option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </form>

                    <button id="save-profile" type="submit" class="save-button">
                        Save
                    </button>
            </form>
        </div>
        <div id="must-signin-snackbar" class="mdl-js-snackbar mdl-snackbar">
                <div class="mdl-snackbar__text"></div>
                <button class="mdl-snackbar__action" type="button"></button>
        <script src="/__/firebase/5.1.0/firebase-app.js"></script>
        <script src="/__/firebase/5.1.0/firebase-auth.js"></script>
        <script src="/__/firebase/5.1.0/firebase-database.js"></script>
        <script src="/__/firebase/5.1.0/firebase-storage.js"></script>
        <script src="/__/firebase/5.1.0/firebase-messaging.js"></script>
        <script src="/__/firebase/init.js"></script>

        <script src="scripts/profile.js" type="text/javascript"></script>

    </body>
</html>